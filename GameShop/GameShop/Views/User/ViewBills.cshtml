@model GameShop.Models.Users.ViewBills
@{
    ViewData["Title"] = "ViewBils";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="row">
        @foreach (var bill in Model.Bills)
        {
            @foreach (var game in Model.Games)
            {
                @if (game.Id == bill.GameId)
                {
                    <div class="col-xl-4 col-lg-4 col-md-6" style="border-style: groove;">
                        <div class="single-product mb-60">
                            <div class="product-img" style="border">
                                <img src="data:image/png;base64, @game.ImageFile" width="350" height="500" alt="" />
                            </div>
                            <div class="product-caption">
                                <h4 align="center"><a style="color:white" asp-controller="User" asp-action="ViewGame" asp-route-id="@game.Id">@game.Name </a></h4>
                                <h4 align="center"></h4>
                                <h4 align="center">Bill details:</h4>
                                <h4 align="left">Address: @bill.Address</h4>
                                <h4 align="left">Phone number: @bill.PhoneNumber</h4>
                                <h4 align="left">Total Value: @bill.TotalValue $</h4>
                            </div>
                        </div>
                    </div>
                }
            }
        }

        </div>
</body>