@model GameShop.Models.Users.ViewOrders
@{
    ViewData["Title"] = "ViewOrders";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body >
    <div class="row">
        @foreach (var order in Model.Orders)
        {
            <div class="col-xl-4 col-lg-4 col-md-6" style="border-style: groove;background-color:white;shape-outside">
                    <div class="product-caption">
                        <h4 align="left">Date: @order.Date.ToShortDateString()</h4>
                        <h4 align="left">TotalValue: @order.TotalValue </h4>
                        @foreach (var game in Model.Games)
                        {
                            @if (game.Id == order.GameId)
                            {
                                <h4 align="left">Product: @game.Name</h4>
                            }
                        }
                    </div>

            </div>
        }
    </div>
</body>